# Security Configuration

# Enable secure boot
enable_secure_boot=true

# Encryption settings
encryption_algorithm=aes256
encryption_key_path=/keys/encryption_key.bin

# Authentication settings
auth_method=psk  # Options: psk, cert
auth_psk_path=/keys/pre_shared_key.txt
auth_cert_path=/keys/auth_cert.pem

# Enable intrusion detection
enable_intrusion_detection=true

# Access control list (ACL)
acl_allowed_ips=192.168.0.0/24,10.0.0.0/8

# Log security events
log_security_events=true
