# Network Configuration

# Default protocol (SLAAC or DHCPv6)
default_protocol=dhcpv6

# Protocol switching thresholds (in milliseconds)
slaac_timeout_ms=500
dhcpv6_timeout_ms=1000

# Status update interval (in seconds)
status_update_interval=30

# Retransmission limits
retransmission_attempts=3
retransmission_backoff_factor=2

# Maximum number of connected devices
max_connected_devices=128

# Enable network debugging
enable_network_debug=true
