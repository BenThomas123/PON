# Kernel Configuration

# Maximum number of tasks allowed
max_tasks=16

# Scheduler type (e.g., round-robin, priority-based)
scheduler_type=priority

# Time slice for each task (in milliseconds, for round-robin scheduler)
time_slice_ms=10

# Stack size for each task (in bytes)
task_stack_size=4096

# Enable debug logging
enable_debug_logging=true

# Interrupt priorities
max_interrupt_priority=5
default_interrupt_priority=3
