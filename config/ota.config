# OTA Configuration

# OTA update server URL
ota_server_url=http://updates.myproject.com/firmware

# OTA update retry attempts
ota_retry_attempts=3

# OTA retry interval (in seconds)
ota_retry_interval=10

# Maximum firmware size (in bytes)
max_firmware_size=1048576

# Enable OTA rollback on failure
enable_rollback=true

# OTA signature verification key
ota_public_key_path=/keys/ota_public.pem
