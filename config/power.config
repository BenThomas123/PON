# Power Management Configuration

# Enable deep sleep mode
enable_deep_sleep=true

# Deep sleep timeout (in seconds)
deep_sleep_timeout=300

# Low power mode for peripherals
low_power_uart=true
low_power_gpio=true

# CPU frequency scaling (in MHz)
min_cpu_freq=80
max_cpu_freq=240

# Battery monitoring thresholds (if applicable)
low_battery_threshold=20
critical_battery_threshold=10
